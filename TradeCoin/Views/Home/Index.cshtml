<!-- Portfolio Section -->
<section id="portfolio" class="about-section">
    <div class="container content-lg">
        <div class="row">
            <div class="col-md-6">
                <img class="img-responsive" src="~/@Model.intro.PageContent.MediaUrl" alt="">
            </div>
            <div class="col-md-6 ">
                <div class="clearfix margin-bottom-30">
                    <div class="content-boxes-in-v3">
                        <h1>Giới thiệu</h1>
                        <span class="text-bold" style="color:white"> @Html.Raw(Model.intro.PageContent.ContentText) </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Portfolio Section -->


<section id="trading" class="about-section section-first">

    <div class="parallax-twitter parallaxBg">
        <div class="title-v1">
            <h2>TRADE</h2>
            <p>
                @Html.Raw(Model.trade.PageContent.ContentExcerpt)
            </p>
        </div>
        <div class="row">
            <div class="col-md-6 content-boxes-v3 margin-bottom-40">
                <div class="clearfix margin-bottom-30">
                    <div class="content-boxes-in-v3">
                        <h2 class="heading-sm"> @Html.Raw(Model.trade.PageContent.ContentText)</h2>

                    </div>
                </div>

            </div>
            <div class="col-md-6">
                <img class="img-responsive" src="~/@Model.trade.PageContent.MediaUrl" alt="">
            </div>
        </div>
    </div>

</section>
<!--  About Section -->
<!-- End News Section -->

<section id="contact">
    <div class="container content-lg">
        <div class="row service-box-v1">

            <div class="col-md-4 col-sm-6">
                <div class="service-block service-block-default">
                    <i class="icon-custom icon-lg icon-bg-u rounded-x icon-line icon-present"></i>
                    <h2 class="heading-sm">Silver Package</h2>
                    <p>Silver Package</p>
                    <ul class="list-unstyled">
                        <li>
                            A month: @ViewBag.Silver
                        </li>
                        <li>Three months: @(ViewBag.Silver * 3)</li>
                        <li>A year: @(ViewBag.Silver * 12)</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="service-block service-block-default">
                    <i class="icon-custom icon-lg icon-bg-u rounded-x icon-line icon-rocket"></i>
                    <h2 class="heading-sm">Night Package</h2>
                    <p>Night Package</p>
                    <ul class="list-unstyled">
                        <li>
                            A month: @ViewBag.Night
                        </li>
                        <li>Three months: @(ViewBag.Night * 3)</li>
                        <li>A year: @(ViewBag.Night * 12)</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="service-block service-block-default">
                    <i class="icon-custom icon-lg icon-bg-u rounded-x icon-line icon-rocket"></i>
                    <h2 class="heading-sm">Free</h2>
                    <p>Free</p>
                    <ul class="list-unstyled">
                        <li>
                            Free
                        </li>

                    </ul>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="service-block service-block-default">
                    <i class="icon-custom icon-lg icon-bg-u rounded-x fa fa-lightbulb-o"></i>
                    <h2 class="heading-md">Diamond Package</h2>
                    <p>Diamond Package</p>
                    <ul class="list-unstyled">
                        <li>
                            A month: @ViewBag.Diamond
                        </li>
                        <li>Three months: @(ViewBag.Diamond * 3)</li>
                        <li>A year: @(ViewBag.Diamond * 12)</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="service-block service-block-default">
                    <i class="icon-custom icon-lg icon-bg-u rounded-x fa fa-lightbulb-o"></i>
                    <h2 class="heading-md">Gold Package</h2>
                    <p>Gold Package</p>
                    <ul class="list-unstyled">
                        <li>
                            A month: @ViewBag.Gold
                        </li>
                        <li>Three months: @(ViewBag.Gold * 3)</li>
                        <li>A year: @(ViewBag.Gold * 3)</li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</section>

<!-- End Services Section -->
<!-- News Section -->
<section id="news" class="news-section">
    <div class="container content-lg">
        <div class="title-v1">
            <h2>Tin tức</h2>

        </div>
        <div class="row news-v1">
            @foreach (ContentItem _item in Model.lstNews)
            {
                <div class="col-md-4 md-margin-bottom-40">
                    <div class="news-v1-in">
                        <img class="img-responsive" src="~/@_item.MediaThumb" alt="">
                        <h3><a href="@Url.Action("DetailNews", "Member",new { id =_val.ContentItemId })">@_item.ContentTitle</a></h3>
                        <p>@Html.Raw(_item.ContentExcerpt)</p>
                        <ul class="list-inline news-v1-info">
                            <li><span>Được gửi bởi </span> @_item.CrtdUserName</li>
                            <li>|</li>
                            <li><i class="fa fa-clock-o"></i> @_item.CrtdDT</li>

                        </ul>
                    </div>
                </div>

            }


        </div>
    </div>
</section>
<!-- End News Section -->