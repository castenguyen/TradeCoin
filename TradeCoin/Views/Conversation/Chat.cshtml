<script>
    $(function () { //This section will run whenever we call Chat.cshtml page
        window.resizeTo(800, 600);
        var objHub = $.connection.chatHub;
        loadClientMethods(objHub);
        $.connection.hub.start().done(function () {
            var UserName = $("#UserName").val();
            var UserEmail = $("#UserEmail").val();
            objHub.server.connect(UserName, UserEmail);
            loadEvents(objHub);

        });
    });

    function loadEvents(objHub) {
        $('#sendmessage').click(function () {
            var msg = $("#message").val();
            if (msg.length > 0) {
                var userName = $('#UserName').val();
                var UserEmail = $("#UserEmail").val();
                objHub.server.sendMessageToGroup(userName, msg);
                $('#message').val('').focus();
            }
        });


        $("#message").keypress(function (e) {
            if (e.which == 13) {
                $('#sendmessage').click();
            }
        });


    }

    function loadClientMethods(objHub) {

        objHub.client.NoExistAdmin = function (message) {
            $('#discussion').append('  <li class="media"><div class="media-body"><div class="media"><a class="pull-left" href="#"><img class="media-object img-circle " src="content/images/user-icon50.png" /></a><div class="media-body">'
                + htmlEncode(message) + ' <br /><small class="text-muted">| 23rd June at 5:00pm</small><hr /></div></div></div></li>');

            $('#message').attr('readonly', true);
            $('#sendmessage').attr('disabled', 'disabled');
        }

        objHub.client.getMessages = function (userName, message) {
            $('#discussion').append('  <li class="media"><div class="media-body"><div class="media"><a class="pull-left" href="#"><img class="media-object img-circle " src="content/images/user-icon50.png" /></a><div class="media-body">'
                + htmlEncode(message) + ' <br /><small class="text-muted">' + htmlEncode(userName) + '| 23rd June at 5:00pm</small><hr /></div></div></div></li>');
            $('#message').focus();
        }

        objHub.client.onConnected = function (id, userName, UserID, userGroup) {

            $('#discussion').append('  <li class="media"><div class="media-body"><div class="media"><a class="pull-left" href="#"><img class="media-object img-circle " src="content/images/user-icon50.png" /></a><div class="media-body">Chào mừng '
                       + htmlEncode(name) + ' đến với thoitrangphaidep.com.vn  <br /><small class="text-muted"> ADMIN | 23rd June at 5:00pm</small><hr /></div></div></div></li>');

            $('#hId').val(id);
            $('#hUserId').val(UserID);
            $('#hUserName').val(userName);
            $('#hGroup').val(userGroup);
            $('#message').attr('readonly', false);
            $('#sendmessage').removeAttr('disabled');
        }

        objHub.client.ClearScreen = function (userName, message) {
            $('#discussion').empty();
            $('#discussion').append('  <li class="media"><div class="media-body"><div class="media"><a class="pull-left" href="#"><img class="media-object img-circle " src="content/images/user-icon50.png" /></a><div class="media-body">'
              + htmlEncode(message) + ' <br /><small class="text-muted">' + htmlEncode(userName) + '| 23rd June at 5:00pm</small><hr /></div></div></div></li>');
            $('#message').focus();
            $('#message').attr('readonly', false);
            $('#sendmessage').removeAttr('disabled');
        }

    }
    function htmlEncode(value) {
        var encodedValue = $('<div />').text(value).html();
        return encodedValue;
    }

</script>



