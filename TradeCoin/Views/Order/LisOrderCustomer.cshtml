@using DataModel.Extension;
@using DataModel.DataEntity;
@using DataModel.DataViewModel;

@model List<Order>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="width_1200">
        <div class="order_header">
            @*<div class="order_header_icon">

                    </div>
                <strong>
                    Đơn hàng mã số
                    <span style="color: #e5101d; font-size: 17px;">198574345</span>
                </strong>
            *@
        </div>

        <div class="status-orders-block">
            <div class="status-orders-right" style="width:100% !important; margin:0px;">
                <div class="box-status">
                    <div class="tl" style="font-weight:bold; font-size:16px; color:red;">Danh sách đơn hàng đã đặt</div>
                    <div class="cont">
                        <table class="table-show-order">
                            <tr>
                                <th>Ngày đặt</th>
                                <th>Người nhận</th>
                                <th>Số điện thoại</th>
                                <th>Email</th>
                                <th>Trạng thái</th>
                                <th>Số tiền</th>
                                <th>Control</th>
                            </tr>
                            @foreach (Order item in Model)
                            {
                                <tr>
                                    <td>@item.PaIdDT.Value.ToString("dd-MM-yyyy hh:mm:ss")</td>
                                    <td>@item.NameCustomerBuy</td>
                                    <td>@item.PhoneCustomer</td>
                                    <td>@item.EmailCustomer</td>
                                    <td>@item.StatusName</td>
                                    <td>@string.Format("{0:#,###.##}", item.Cost) vnđ</td>
                                    <td><a href="@Url.Action("DonHang","Order",new { id = item.Id })">Xem chi tiết</a></td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>



    </div>
</div>




<script type="text/javascript">
    $(document).ready(function () {
        $(".xt_effect_gianhang").click(function () {
            //console.log($('.list_gian_hang').css("margin-right"));
            if ($('.list_gian_hang').css("margin-right") == "0px") {
                $('.list_gian_hang').animate({
                    'margin-right': '1200px',
                    opacity: '0.5',
                }, { duration: 2000 });
                $('.list_gian_hang').animate({
                    'margin-right': '-1002px',
                    opacity: '1',
                }, { duration: 0 });
                $('.list_gian_hang').animate({
                    'margin-right': '0px',
                    //opacity: '1',
                }, { duration: 2000 });
            }

        });
    });
</script>

<script type="text/javascript">
    $(function () {
        var range__slider = $(".range__slider").eq(0).width();
        console.log(range__slider);
        var per_1 = 21 / 100 * range__slider;
        var per_2 = 85 / 100 * range__slider;
        $(".range__slider__left").css("left", per_1);
        $(".range__slider__right").css("left", per_2);
        $(".range__slider__gap").css("left", per_1);
        $(".range__slider__gap").css("width", (per_2 - per_1));
    });
</script>
