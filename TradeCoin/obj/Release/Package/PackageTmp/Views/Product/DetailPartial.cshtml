                <div class="row">
                    <div class="col-sm-8">
                        <div class="row" id="ItemFull">
                            <img src="~/@Model.lstImage.First().FullURL" alt="">
                        </div>
                        <div class="row">
                            @foreach (MediaContent _item in Model.lstImage)
                            {
                                <div class="col-sm-2">
                                    <img src="~/@_item.FullURL" alt="" class="ItemThumb" onclick="javascript:ChangeUrlImage('@_item.FullURL')">
                                </div>
                            }
                        </div>

                    </div>
                    <script>
                        function ChangeUrlImage(url) {
                           $("#ItemFull > img").attr("src", "");
                           $("#ItemFull > img").attr("src", "/"+url);
                        }
                    </script>
                    <div class="col-sm-4">
                        <h5>@Model.MainProduct.ProductName</h5>
                        <table class="table portfolio-table">
                            <tr>
                                <th>Giá :</th>
                                <td>@Model.MainProduct.NewPrice</td>
                            </tr>
                           
                        </table>
                        <a href="#" class="beta-btn primary">Mua hàng<i class="fa fa-chevron-right"></i></a>
