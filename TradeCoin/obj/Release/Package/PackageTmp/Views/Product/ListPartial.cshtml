@{
    ViewBag.Title = "Product List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using DataModel.DataEntity;
@using DataModel.DataViewModel;
@model ListProductViewModel

@{
    Classification Objcata = Model.CataObj;
    string prefixlink = Objcata.FriendlyURL;
    if (Objcata.ObjPrent != null)
    { prefixlink = Objcata.ObjPrent.FriendlyURL + "/" + prefixlink; }
}


<div class="container">
    <div id="content">
        <div class="row">

            <div class="col-sm-9 main-content pull-right">

                <div class="beta-products-list">
                    <h4>@Model.CataObj.ClassificationNM</h4>
                    @*<div class="beta-products-details">
                        <p class="pull-left">438 styles found | <a href="#">View all</a></p>
                        <p class="pull-right">
                            <span class="sort-by">Sort by </span>
                            <select name="sortproducts" class="beta-select-primary">
                                <option value="desc">Latest</option>
                                <option value="popular">Popular</option>
                                <option value="rating">Rating</option>
                                <option value="best">Best</option>
                            </select>
                        </p>
                        <div class="clearfix"></div>
                    </div>*@

                    <div class="row">
                        @foreach (Product _val in Model.lstProduct)
                        {
                            <div class="col-sm-4 ">
                                <div class="single-item">
                                    <div class="single-item-header">
                                        <a href="@prefixlink/@_val.FriendlyURL"><img src="~/@_val.MediaThumb" alt="@_val.ProductName"></a>
                                    </div>
                                    <div class="single-item-body">
                                        <p class="single-item-title">@_val.ProductName</p>
                                        <p class="single-item-price">
                                            <span>@_val.NewPrice</span>
                                        </p>
                                    </div>
                                    <div class="single-item-caption">
                                        <a class="add-to-cart pull-left" href="@prefixlink/@_val.FriendlyURL"><i class="fa fa-shopping-cart"></i></a>
                                        <a class="beta-btn primary" href="@prefixlink/@_val.FriendlyURL">Chi tiết<i class="fa fa-chevron-right"></i></a>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div> <!-- .beta-products-list -->
            </div> <!-- .main-content -->
            @Html.Action("RightSlidePartial2", "Home")
        </div>
    </div> <!-- #content -->
</div> <!-- .container -->
