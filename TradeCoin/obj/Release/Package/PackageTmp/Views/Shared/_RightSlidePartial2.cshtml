<div class="col-sm-3 aside">
    <ul class="aside-menu">
        @foreach (SubMenuViewModels _item in Model.CataList)
        {
            if (_item.lstChild.Count() > 0)
            {  <li><a href="~/@_item.Parent.FriendlyURL">@_item.Parent.ClassificationNM</a></li>
                @*<li>
                    <a href="#">@_item.Parent.ClassificationNM</a>
                    <div class="wrap-popup">
                        <div class="popup">
