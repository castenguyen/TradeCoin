@{
    ViewBag.Title = "News Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using DataModel.DataViewModel;

@model DetailNewViewModel


<div class="inner-header">
    <div class="container">
        <div class="pull-left">
            <h6 class="inner-title">@Model.CataObj.ClassificationNM</h6>
        </div>
        @*<div class="pull-right">
            <div class="beta-breadcrumb font-large">
                <a href="index.html">Home</a> / <span>@Model.CataObj.ClassificationNM</span>
            </div>
        </div>*@
        <div class="clearfix"></div>
    </div>
</div>

<div class="container">
    <div id="content">
        <div class="row">
            @Html.Action("LeftSlidePartial", "Home")

            <div class="col-sm-6">
                <div class="beta-blog beta-blog-e">
                    <div class="beta-blog-header">
                        <div class="media">
                            <div class="pull-left">
                                <span class="beta-blog-type pull-left"><i class="fa fa-picture-o"></i></span>
                                <span class="beta-blog-date pull-left">
                                    <span class="beta-blog-month">@Model.MainNews.CrtdDT.Value.ToString("MM")</span>
                                    <span class="beta-blog-day">@Model.MainNews.CrtdDT.Value.ToString("dd")</span>
                                </span>
                                <div class="clearfix"></div>
                            </div>
                            <div class="media-body">
                                <h5 class="beta-blog-title"><a href="">@Model.MainNews.ContentTitle</a></h5>
                                <p>Đăng bởi : <a href="#">@Model.MainNews.CrtdUserName</a> 
                                @*|
                                 <a href="#">12 Comments</a> |
                                 In <a href="blog_fullwidth_2col.html">Business</a>,
                                 <a href="blog_fullwidth_2col.html">Education</a>,
                                 <a href="blog_fullwidth_2col.html">Health</a>*@</p>
                            </div>
                        </div>
                    </div>

                    <div class="beta-blog-content">
                        <div class="mb20"><a href="single_type_image.html"><img src="~/@Model.MainNews.MediaUrl" alt=""></a></div>
                        <div class="beta-blog-excerpt">
                            @Html.Raw(Model.MainNews.ContentText)
                        </div>
                    </div>
                </div> <!-- .beta-blog item -->


            </div>

            @Html.Action("RightSlidePartial", "Home")
        </div>
    </div> <!-- #content -->
</div> <!-- .container -->

