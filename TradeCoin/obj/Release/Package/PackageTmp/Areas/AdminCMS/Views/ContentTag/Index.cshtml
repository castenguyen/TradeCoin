@using Microsoft.AspNet.Identity
@using DataModel.DataEntity;
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Tag>
@{
    ViewBag.Title = "Quản Lý Tag";
    Layout = "~/Areas/AdminCMS/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Quản Lý Tag</h3>
                    <div class="box-tools">
                        @*<div class="btn-group">
                            <button type="button" class="btn btn-danger">ClassificationScheme</button>
                            <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown">
                                <span class="caret"></span>
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">All</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Another action</a></li>
                                <li><a href="#">Something else here</a></li>
                                <li><a href="#">Separated link</a></li>
                            </ul>
                        </div>*@
                        <a href="@Url.Action("CreateTag", "ContentTag", null)" class="btn btn-primary">ADD NEW TAG</a>
                    </div>
                </div><!-- /.box-header -->
                <!-- form start -->
                <div class="box-body">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Xoá</th>
                            </tr>
                            @{
                                foreach (var _val in Model)
                                {
                                    <tr>
                                        <td>@_val.TagId</td>
                                        <td>@_val.TagNM</td>
                                        <td><a href="@Url.Action("Delete", "ContentTag", new { id = @_val.TagId })" class="btn btn-primary">Xoá</a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
                <div class="box-footer clearfix">
                    @if (Model.PageCount > 1)
                    {
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    }
                </div>

            </div><!-- /.box -->
            <!-- Form Element sizes -->

        </div><!--/.col (left) -->



    </div>   <!-- /.row -->
</section>





