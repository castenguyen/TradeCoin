@using Microsoft.AspNet.Identity
@using DataModel.DataEntity;
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<ClassificationScheme>
@{
    ViewBag.Title = "ClassificationScheme";
    Layout = "~/Areas/AdminCMS/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">DANH SÁCH ClassificationScheme</h3>
                    <div class="box-tools">
                        <a href="@Url.Action("Create", "ClassificationScheme", null)" class="btn btn-primary">ADD NEW</a>
                    </div>
                </div><!-- /.box-header -->
                <!-- form start -->
                <div class="box-body">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <th style="width:20%">Name</th>
                                <th>Người tạo</th>
                                <th>Mô tả</th>
                                <th>Edit</th>
                            </tr>
                            @{
                                foreach (var _val in Model)
                                {
                                    <tr>
                                        @if(_val.IsSystem != 1)
                                        {
                                            <td>@_val.ClassificationSchemeId</td>
                                        }
                                        else
                                        {
                                            <td></td>
                                        }
                                    <td><a href="@Url.Action("Index", "Classification", new { area = "AdminCMS", SchemeId = _val.ClassificationSchemeId })">@_val.ClassificationSchemeNM</a></td>
                                  
                                    <td>@_val.ObjCrtdUser.FullName</td>
                                    <td>@_val.ClassificationSchemeDesc</td>
                                    <td>@Html.ActionLink("Edit", "Edit", "ClassificationScheme", new { id = _val.ClassificationSchemeId }, null)</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
                <div class="box-footer clearfix">
                    @if (Model.PageCount > 1)
                    {
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page}))
                    }
                </div>
            </div><!-- /.box -->
            <!-- Form Element sizes -->
        </div><!--/.col (left) -->
    </div>   <!-- /.row -->
</section>

