                            <div class="form-group">
                                <label class="col-md-4 control-label" for="ContentTitle">Gía gói cước</label>
                                <input class="form-control" data-val="true" data-val-required="The Tên bài viết field is required." id="ContentTitle" name="ContentTitle" onchange="return InputTitle(this.value,event)" type="text" value="">
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="ContentTitle">Thời gian gói cước (Tính theo ngày)</label>
                                <input class="form-control" data-val="true" data-val-required="The Tên bài viết field is required." id="ContentTitle" name="ContentTitle" onchange="return InputTitle(this.value,event)" type="text" value="">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                     
                    </div><!-- /.box-body -->
                 
            </div><!-- /.box -->
            <!-- Form Element sizes -->

        </div><!--/.col (left) -->
        <!-- right column -->

    </div>   <!-- /.row -->
</section>

