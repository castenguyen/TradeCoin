
@{
    ViewBag.Title = "CreatePackage";
    Layout = "~/Areas/AdminCMS/Views/Demo/_DemoLayout.cshtml";
}

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h2 class="box-title">Thêm mới gói cước</h2>
                </div><!-- /.box-header -->
                <!-- form start -->
            
                   
                    <div class="box-body">
                        <div class="col-md-9">
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="ContentTitle">Tên Gói cước</label>
                                <input class="form-control" data-val="true" data-val-required="The Tên bài viết field is required." id="ContentTitle" name="ContentTitle" onchange="return InputTitle(this.value,event)" type="text" value="">
