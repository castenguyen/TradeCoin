@using Microsoft.AspNet.Identity
@using DataModel.DataEntity;
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Package>
@{
    ViewBag.Title = "Quản Lý gói cước";
    Layout = "~/Areas/AdminCMS/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
           
                <div class="box-body">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <th style="width:20%">Tên</th>
                                <th>Giá tháng</th>
                                <th>Giá quý</th>
                                <th>Giá vĩnh viễn</th>
                                <th>Edit</th>
                            </tr>

                            @{
                                foreach (Package _val in Model)
                                {
                            <tr>
                                <td>@_val.PackageId</td>
                                <td>@_val.PackageName</td>
                                <td>@_val.NewPrice</td>
                                <td>@_val.NewPrice3M</td>
                                <td>@_val.ForeverPrice</td>
                                <td>@Html.ActionLink("Update", "Update", "PackageManager", new { id = _val.PackageId }, null)</td>
                            </tr>

                                }
                            }
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
                <div class="box-footer clearfix">
                    @if (Model.PageCount > 1)
                    {
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    }
                </div>
            </div><!-- /.box -->
            <!-- Form Element sizes -->
        </div><!--/.col (left) -->
    </div> <!-- /.row -->
</section>




