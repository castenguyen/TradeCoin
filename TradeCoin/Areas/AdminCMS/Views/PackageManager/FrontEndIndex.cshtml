@using Microsoft.AspNet.Identity
@using DataModel.DataEntity;
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Package>
@{
    ViewBag.Title = "FrontEndIndex";
    Layout = "~/Areas/AdminCMS/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="row">

        @{
            foreach (Package _val in Model)
            {
               if(_val.NumDay > 0)
                {
                    <div class="col-md-3">
                        <div class="box box-primary">
                            <div class="box-header with-border">

                                <h3 class="profile-username text-center">@_val.PackageName</h3>
                                <p class="text-muted text-center">@_val.NewPrice vnđ</p>
                            </div><!-- /.box-header -->
                            <div class="box-body text-center">
                                <strong><i class="fa fa-clock margin-r-5"></i> @_val.NumDay Ngày</strong>
                            <hr>
                                <a href="@Url.Action("ConfirmUpgrade", "PackageManager", new { UserId=User.Identity.GetUserId(),PackageId=_val.PackageId})" class="btn btn-primary btn-block"><b>Nâng cấp </b></a>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div><!-- /.col -->

                }
            }
        }
    </div><!-- /.row -->
</section><!-- /.content -->
