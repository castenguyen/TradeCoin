@using Microsoft.AspNet.Identity
@using DataModel.DataEntity;
@using DataModel.Extension;
@using DataModel.DataViewModel;
@model MemberFrontEndViewModel
@{
    ViewBag.Title = "ModIndex";
    Layout = "~/Areas/AdminCMS/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="row">
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-aqua"><i class="fa fa-envelope-o"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Thư</span>
                    <span class="info-box-number">1,410</span>
                </div><!-- /.info-box-content -->
            </div><!-- /.info-box -->
        </div><!-- /.col -->
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-green"><i class="fa fa-flag-o"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Bài Viết</span>
                    <span class="info-box-number">410</span>
                </div><!-- /.info-box-content -->
            </div><!-- /.info-box -->
        </div><!-- /.col -->
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-yellow"><i class="fa fa-files-o"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Uploads</span>
                    <span class="info-box-number">13,648</span>
                </div><!-- /.info-box-content -->
            </div><!-- /.info-box -->
        </div><!-- /.col -->
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-red"><i class="fa fa-star-o"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Điểm support</span>
                    <span class="info-box-number">93,139</span>
                </div><!-- /.info-box-content -->
            </div><!-- /.info-box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
    <div class="row">




        <div class="col-md-9">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#activity" data-toggle="tab">Kèo mới</a></li>
                    <li><a href="#timeline" data-toggle="tab">Tin tức</a></li>

                </ul>
                <div class="tab-content">

                    <div class="active tab-pane" id="activity">
                        <div class="box box-widget">

                            <div class='box-body'>
                                @foreach (TickerViewModel _val in Model.lstTicker)
                                {
                                    <div class="attachment-block clearfix">
                                        <img class="attachment-img" src="~/@_val.MediaThumb" alt="attachment image">
                                        <div class="attachment-pushed">
                                            <h4 class="attachment-heading">
                                                <a href="@Url.Action("DetailTicker", "Member",new { tickerId =_val.TickerId })">@_val.TickerName</a>

                                                @foreach (ContentPackage _item in _val.lstTickerContentPackage)
                                                {

                                                    <span class="badge bg-yellow">@_item.PackageName</span>
                                                }


                                            </h4>
                                            <div class="attachment-text">
                                                @Html.Raw(_val.Excerpt)   
                                            <a href="@Url.Action("DetailTicker", "Member",new { tickerId =_val.TickerId })">Chi tiết</a>
                                            </div><!-- /.attachment-text -->
                                            <div class='user-block pull-right'>

                                                <span class='description'> @_val.CrtdUserName - @_val.CrtdDT</span>
                                            </div><!-- /.user-block -->
                                        </div><!-- /.attachment-pushed -->
                                    </div><!-- /.attachment-block -->

                                }
                            </div><!-- /.post -->
                        </div><!-- /.post -->



                    </div><!-- /.tab-pane -->


                    <div class="tab-pane" id="timeline">
                        <div class="box box-widget">

                            <div class='box-body'>
                                @foreach (ContentItemViewModels _val in Model.lstNews)
                                {



                                    <div class="attachment-block clearfix">
                                        <img class="attachment-img" src="~/@_val.MediaThumb" alt="attachment image">
                                        <div class="attachment-pushed">
                                            <h4 class="attachment-heading">
                                                <a href="@Url.Action("DetailNews", "Member", new { id = _val.ContentItemId })">@_val.ContentTitle</a>

                                                @foreach (ContentPackage _item in _val.lstNewsContentPackage)
                                                {

                                                    <span class="badge bg-yellow">@_item.PackageName</span>
                                                }
                                            </h4>
                                            <div class="attachment-text">
                                                @_val.ContentExcerpt <a href="@Url.Action("DetailNews", "Member", new { id = _val.ContentItemId })">Chi tiết</a>
                                            </div><!-- /.attachment-text -->
                                            <div class='user-block pull-right'>

                                                <span class='description'> @_val.CrtdUserName - @_val.CrtdDT</span>
                                            </div><!-- /.user-block -->
                                        </div><!-- /.attachment-pushed -->
                                    </div><!-- /.attachment-block -->

                                }


                            </div><!-- /.box-body -->

                        </div><!-- /.box -->
                    </div><!-- /.tab-pane -->

                </div><!-- /.tab-content -->
            </div><!-- /.nav-tabs-custom -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->
