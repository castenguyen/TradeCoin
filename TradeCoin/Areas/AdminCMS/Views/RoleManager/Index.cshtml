@using DataModel.DataEntity
@using Microsoft.AspNet.Identity
@model DataModel.DataViewModel.RoleViewModel
@{
    ViewBag.Title = "Danh sách Role";
    Layout = "~/Areas/AdminCMS/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h2 class="box-title">DANH SÁCH ROLE</h2>
                    <div class="box-tools">
                        <a href="@Url.Action("AddNewRole", "RoleManager", null)" class="btn btn-primary">Thêm mới Role</a>
                    </div>
                </div><!-- /.box-header -->
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <th>Tên</th>
                            <th>Mô tả</th>
                            <th>Là nhóm quyền</th>
                            <th>Thao tác</th>
                        </tr>
                        @foreach (Role _item in Model.ListRole)
                        {
                            <tr>
                                <td>@_item.Id</td>
                                <td><a href="@Url.Action("EditRole", "RoleManager", new {id=_item.Id})">@_item.Name</a>   </td>
                                <td>@_item.RoleDes</td>
                                <td>@_item.IsGroup</td>
                                <td>
                                    <a href="@Url.Action("EditRole", "RoleManager", new {id=_item.Id})">Chỉnh sửa </a> |
                                    @if (_item.IsGroup == true)
                                    {
                                        <a href="@Url.Action("CreateRoleGroup", "RoleManager", new {id=_item.Id})">Thêm quyên </a>
                                    }
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div><!-- /.box -->
            <!-- Form Element sizes -->

        </div><!--/.col (left) -->
        <!-- right column -->

    </div>   <!-- /.row -->
</section>


