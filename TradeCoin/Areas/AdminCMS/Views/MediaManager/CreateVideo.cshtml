<script src="~/Scripts/jQuery.FileUpload/vendor/jquery.ui.widget.js"></script>
<script src="~/Scripts/jQuery.FileUpload/jquery.iframe-transport.js"></script>
<!-- The basic File Upload plugin -->
<script src="~/Scripts/jQuery.FileUpload/jquery.fileupload.js"></script>
<!-- The File Upload processing plugin -->
<script src="~/Scripts/jQuery.FileUpload/jquery.fileupload-process.js"></script>
<!-- The File Upload image preview & resize plugin -->
<script src="~/Scripts/jQuery.FileUpload/jquery.fileupload-image.js"></script>
<!-- The File Upload audio preview plugin -->
<script src="~/Scripts/jQuery.FileUpload/jquery.fileupload-audio.js"></script>
<!-- The File Upload video preview plugin -->
<script src="~/Scripts/jQuery.FileUpload/jquery.fileupload-video.js"></script>
<!-- The File Upload validation plugin -->
<script src="~/Scripts/jQuery.FileUpload/jquery.fileupload-validate.js"></script>
<!-- The File Upload user interface plugin -->
<script src="~/Scripts/jQuery.FileUpload/jquery.fileupload-ui.js"></script>
<!-- The File Upload jQuery UI plugin -->
<script>
    $(document).ready(function () {


        CKEDITOR.replace("MediaDesc", {
            filebrowserBrowseUrl: '@folderimg.ToString()',
            filebrowserUploadUrl: '@Url.Action("CK_ImgUpload", "Extension")',
            toolbar: 'full',
            uiColor: '#8AB8F3',
            height: "400",
            width: "100%"
            //  baseHref: "@bare_url.ToString()"
        });


        var rules = {
            Filename: "required",
            AlternativeText: "required"
        };
        var messages = {
            Filename: "Vui lòng nhập tên",
            AlternativeText: "Vui lòng nhập tên hiển thị"
        };

        ValidationForm({
            ctrID: "CreateForm"
            , rules: rules
            , messages: messages
        })
    });

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#blah').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#Default_files").change(function () {
        readURL(this);
    });

    var url = "UploadVideo";
    $('#fileupload').fileupload({
        maxChunkSize: 1000000,
        url: url,
        dataType: 'json',
        add: function (e, data) {
            var goUpload = true;
            var uploadFile = data.files[0];
            //if (data.originalFiles.length > 10) {
            //    coreApp.notificationError('Error', 'Your files too much, multi upload accept with files < 10.');
            //    goUpload = false;
            //    return false;
            //}
            if (!(/\.(mp4)$/i).test(uploadFile.name)) {
                console.log('This file do not support. Please select file type .mp4');
                //coreApp.notificationError('Error', 'This file do not support. Please select file type .mp4');
                goUpload = false;
                return false;
            }
            //if (uploadFile.size > 20000000) { // 2mb
            //    coreApp.notificationError('Error', 'Please upload a smaller file, max size is 20 MB.');
            //    goUpload = false;
            //    return false;
            //}
            if (goUpload == true) {
                data.submit();
            }
        },
        done: function (e, data) {
            var a = data.result.FilePath;

           // $("#LinkHref").attr("disabled", "disabled");
           // $("#LinkHref").val(data.result.FilePath);

            $('#LinkHref').attr('readonly', true);
            $('#LinkHref').attr('value', data.result.FilePath);

        },
        progressall: function (e, data) {
            var progress = parseInt(data.loaded / data.total * 100, 10);
            $('#progress .progress-bar').css(
                'width',
                progress + '%'
            );
        }
    }).on('fileuploadchunksend', function (e, data) { })
        .on('fileuploadchunkdone', function (e, data) { })
        .on('fileuploadchunkfail', function (e, data) {
            coreApp.alertError({
                title: 'Result', content: 'This file do not allow, upload file allow for file text, rar, mp3.'
            });
        })


</script>
