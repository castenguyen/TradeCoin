@using Microsoft.AspNet.Identity
@model DataModel.DataViewModel.TagViewModels
@{
    ViewBag.Title = "ADD NEW TAG";
    Layout = "~/Areas/AdminCMS/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h2 class="box-title">ADD NEW TAG</h2>
                    <p>Bạn đang đăng nhập bằng tài khoản <strong>@User.Identity.GetUserName()</strong>.</p>
                </div><!-- /.box-header -->
                <!-- form start -->
                @using (Html.BeginForm("CreateTag", "ContentTag", FormMethod.Post, new { id = "CreateForm", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">

                        @Html.ValidationSummary("", new { @class = "text-danger" })

                        <div class="form-group col-md-9">
                            @Html.LabelFor(m => m.TagNM, new { @class = "col-md-4 control-label" })
                            @Html.TextBoxFor(m => m.TagNM, new { @class = "form-control" })
                        </div>

                        <div class="form-group col-md-9">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div><!-- /.box-body -->
                    @*<div class="box-footer col-md-9">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>*@
                }
            </div><!-- /.box -->
            <!-- Form Element sizes -->

        </div><!--/.col (left) -->
        <!-- right column -->

    </div>   <!-- /.row -->
</section>
<script>

    $(document).ready(function () {
        var rules = {
            TagNM: "required"
        };
        var messages = {
            TagNM: "Please enter FriendlyURL "
        };
        ValidationForm({
            ctrID: "CreateForm"
            , rules: rules
            , messages: messages
        })
    });
</script>