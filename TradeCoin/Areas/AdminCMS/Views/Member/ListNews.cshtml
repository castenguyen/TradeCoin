@using Microsoft.AspNet.Identity
@using DataModel.DataEntity;
@using DataModel.DataViewModel;
@using DataModel.Extension;
@using PagedList;
@using PagedList.Mvc;
@model ContentItemIndexViewModel
@{
    ViewBag.Title = "ListNews";
    Layout = "~/Areas/AdminCMS/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Member Dashboard
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Member Dashboard</li>

    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">

        <div class="col-md-8">


            <div class="box box-widget">
                <div class="box-header with-border">
                    <h3 class="box-title">Danh Sách tin tức</h3>
                </div><!-- /.box-header -->
                <div class='box-body'>


                    @foreach (ContentItem _val in Model.lstMainContent)
                    {
                        <div class="attachment-block clearfix">
                            <img class="attachment-img" src="~/@_val.MediaThumb" alt="attachment image">
                            <div class="attachment-pushed">
                                <h4 class="attachment-heading"><a href="@Url.Action("Edit", "ContentItem", new { id = _val.ContentItemId })">@_val.ContentTitle</a></h4>
                                <div class="attachment-text">
                                    @_val.ContentExcerpt ...<a href="#">Chi tiết</a>
                                </div><!-- /.attachment-text -->
                                <div class='user-block pull-right'>
                                    <span class='username'><a href="#">@_val.CategoryName</a></span>
                                    <span class='description'> @_val.CrtdUserName -  @_val.CrtdDT</span>
                                </div><!-- /.user-block -->
                            </div><!-- /.attachment-pushed -->
                        </div><!-- /.attachment-block -->

                    }

                </div><!-- /.box-body -->

                <div class="box-footer clearfix">
                    @if (Model.lstMainContent.PageCount > 1)
                    {
                        @Html.PagedListPager(Model.lstMainContent, page => Url.Action("Index", new { page, state = Model.ContentState, catalogry = Model.ContentCatalogry }))
                    }
                </div>
            </div><!-- /.box -->
        </div>
        <div class="col-md-4">
            <div class="box box-widget">
                <div class="box-header with-border">
                    <h3 class="box-title">Danh sách Kèo</h3>
                </div><!-- /.box-header -->
                <div class='box-body'>
                    <div class="post">
                        <div class="user-block">
                            <img class="img-circle img-bordered-sm" src="~/Areas/AdminCMS/dist/img/user1-128x128.jpg" alt="user image">
                            <span class='username'>
                                <a href="#">
                                    USDJPY - 24/07/201
                                </a>

                            </span>
                            <span class='description'>Shared publicly - 7:30 PM today</span>
                        </div><!-- /.user-block -->
                    </div><!-- /.post -->
                    <!-- Post -->
                    <div class="post clearfix">
                        <div class='user-block'>
                            <img class='img-circle img-bordered-sm' src='~/Areas/AdminCMS/dist/img/user1-128x128.jpg' alt='user image'>
                            <span class='username'>
                                <a href="#">
                                    EURUSD - 24/07/201
                                </a>

                            </span>
                            <span class='description'>Sent you a message - 3 days ago</span>
                        </div><!-- /.user-block -->

                    </div><!-- /.post -->
                    <!-- Post -->
                    <!-- Post -->
                    <div class="post clearfix">
                        <div class='user-block'>
                            <img class='img-circle img-bordered-sm' src='~/Areas/AdminCMS/dist/img/user1-128x128.jpg' alt='user image'>
                            <span class='username'>
                                <a href="#">
                                    USDJPY - 25/07/2018
                                </a>

                            </span>
                            <span class='description'>Sent you a message - 3 days ago</span>
                        </div><!-- /.user-block -->

                    </div><!-- /.post -->
                    <!-- Post -->
                    <div class="post clearfix">
                        <div class='user-block'>
                            <img class='img-circle img-bordered-sm' src='~/Areas/AdminCMS/dist/img/user1-128x128.jpg' alt='user image'>
                            <span class='username'>
                                <a href="#">
                                    GBPUSD - 25/07/2018
