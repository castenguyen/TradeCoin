@using Microsoft.AspNet.Identity
@using DataModel.DataEntity;
@using DataModel.Extension;
@using PagedList;
@using PagedList.Mvc;
@using DataModel.DataViewModel;
@model TickerMemberViewModel
@{
    ViewBag.Title = "ListTicker";
    Layout = "~/Areas/AdminCMS/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Danh sách kèo
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active">Danh sách kèo</li>

    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-widget">
                <div class="box-header with-border">
                    <h3 class="box-title">Danh sách Kèo</h3>
                </div><!-- /.box-header -->
                <div class='box-body'>
                    @foreach (TickerViewModel _val in Model.lstMainTicker)
                    {

                        <div class="attachment-block clearfix">
                            <img class="attachment-img" src="~/@_val.MediaThumb" alt="attachment image">
                            <div class="attachment-pushed">
                                <h4 class="attachment-heading">
                                    <a href="@Url.Action("DetailTicker", "Member",new { tickerId =_val.TickerId })">@_val.TickerName</a>

                                    @foreach (ContentPackage _item in _val.lstTickerContentPackage)
                                    {
                                        <span class="badge bg-yellow">@_item.PackageName</span>
                                    }

                                </h4>
                                <div class="attachment-text">
                                @Html.Raw(_val.Description)...
                                
                                <a href="@Url.Action("DetailTicker", "Member", new { tickerId =_val.TickerId })">Chi tiết</a>
                                </div><!-- /.attachment-text -->
                                <div class='user-block pull-right'>
                                    @*<span class='username'><a href="#">Jonathan Burke Jr.</a></span>*@
                                    <span class='description'>@_val.CrtdUserName - @_val.CrtdDT</span>
                                    @if (_val.tmp > 0)
    {
                                <span class='badge bg-green'> Đã xem</span>
}

                                </div><!-- /.user-block -->
                            </div><!-- /.attachment-pushed -->
                        </div><!-- /.attachment-block -->

                    }
                </div><!-- /.user-block -->
                <div class="box-footer clearfix">
                    @if (Model.lstMainTicker.PageCount > 1)
                    {
                        @Html.PagedListPager(Model.lstMainTicker, page => Url.Action("ListTicker", new { page, TickerStatus = Model.TickerStatus, TickerPackage = Model.TickerPackage }))
                    }
                </div>
            </div><!-- /.user-block -->
        </div>


    </div><!-- /.tab-content -->

</section><!-- /.content -->
