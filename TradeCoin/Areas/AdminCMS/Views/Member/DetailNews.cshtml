@using Microsoft.AspNet.Identity
@using DataModel.DataViewModel;
@using DataModel.DataEntity;
@model DataModel.DataViewModel.ContentItemViewModels
@{
    ViewBag.Title = "DetailNews";
    Layout = "~/Areas/AdminCMS/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Chi tiết bài viết
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Chi tiết bài viết</li>

    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">

        
            <div class="col-md-8">
                <div class="box box-widget">

                    <div class="box box-widget">
                        <div class='box-header with-border'>
                            <div class='user-block'>
                                <img class='img-circle' src='~/Areas/AdminCMS/dist/img/user1-128x128.jpg' alt='user image'>
                                <span class='username'><a href="@Url.Action("DetailNews", "Member", new { id = Model.ContentItemId })">@Model.ContentTitle</a></span>
                                <span class='description'>Được gửi bởi @Model.CrtdUserName - @Model.CrtdDT</span>
                            </div><!-- /.user-block -->
                        </div><!-- /.box-header -->
                        <div class='box-body' id="bodycontent">
                            @*<img class="img-responsive" src="~/@Model.MediaUrl" alt="attachment image">*@
                            @Html.Raw(Model.ContentText)
                            <!-- Attachment -->
                            <!-- Social sharing buttons -->
                            @*<button class='btn btn-default btn-xs'><i class='fa fa-share'></i> Share</button>*@
                            @*<span class='pull-right text-muted'> 200 Lượt xem</span>*@
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->

                </div><!-- /.user-block -->


            </div>
            <div class="col-md-4">
                <div class="box box-widget">
                    <div class="box-header with-border">
                        <h3 class="box-title">Tin tức khác</h3>
                    </div><!-- /.box-header -->
                    @foreach (MiniContentItemViewModel _item in Model.lstSameNews)
                    {
                        <div class='box-header with-border'>
                            <div class='user-block'>
                                <img class='img-circle' src='~/@_item.MediaThumb' alt='user image'>
                                <span class='username'><a href="@Url.Action("DetailNews", "Member", new { id = Model.ContentItemId })">@_item.ContentTitle</a></span>
                                <span class='description'>@_item.CrtdUserId - @_item.CrtdDT</span>

                                @if (_item.MicrositeID > 0)
    {
                            <span class='badge bg-green pull-right'> Đã xem</span>
}

                            </div><!-- /.user-block -->
                        </div><!-- /.box-header -->

                    }

                </div><!-- /.box -->
            </div>

    


    </div><!-- /.tab-content -->

</section><!-- /.content -->
<script>


    $(document).ready(function () {
        $("#bodycontent").find("img").removeAttr('style').addClass('img-responsive');
    });
</script>