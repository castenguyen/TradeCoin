@using Microsoft.AspNet.Identity
@using DataModel.DataViewModel;
@using DataModel.DataEntity;
@model DataModel.DataViewModel.MediaContentViewModels
@{
    ViewBag.Title = "DetailNews";
    Layout = "~/Areas/AdminCMS/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
  
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Chi tiết Video</li>

    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">

        <div class="col-md-8">
            <div class="box box-widget">

                <div class="box box-widget">
                    <div class='box-header with-border'>
                        <div class='user-block'>
                            <img class='img-circle' src='~/Areas/AdminCMS/dist/img/user1-128x128.jpg' alt='user image'>
                            <span class='username'><a href="#">@Model.Filename</a></span>
                            <span class='description'> @Model.CrtdDT</span>
                        </div><!-- /.user-block -->
                    </div><!-- /.box-header -->
                    <div class='box-body'>

                        <video width="100%" height="100%" controls>
                            <source src="~/api/NcoinService/GetVideo?VideoId=@Model.MediaContentId&gui=@Model.objMediaContent.MediaContentGuidId" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>

                        @Html.Raw(Model.MediaDesc)

                        @*<span class='pull-right text-muted'> 200 Lượt xem</span>*@
                    </div><!-- /.box-body -->
                    <div class='box-footer'>
                        <span class='description'>Hãy sử dụng trình duyệt web chrome để được hỗ trợ xem video tốt nhất</span><br>
                        <span class='description'>Vui lòng mở trình duyệt chrome đăng nhập vào ncoinclub.com sau đó copy đường dẩn sau để xem:</span><br>
                        <span class='description'>http://ncoinclub.com/api/NcoinService/GetVideo?VideoId=@Model.MediaContentId&gui=@Model.objMediaContent.MediaContentGuidId</span>
                       

                    </div><!-- /.box -->
                </div><!-- /.box -->

            </div><!-- /.user-block -->


