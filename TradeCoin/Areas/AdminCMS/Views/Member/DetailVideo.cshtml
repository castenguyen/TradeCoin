@using Microsoft.AspNet.Identity
@using DataModel.DataViewModel;
@using DataModel.DataEntity;
@model DataModel.DataViewModel.MediaContentViewModels
@{
    ViewBag.Title = "DetailNews";
    Layout = "~/Areas/AdminCMS/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Chi tiết Video
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Member Dashboard</li>

    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">


        <div class="col-md-8">
            <div class="box box-widget">

                <div class="box box-widget">
                    <div class='box-header with-border'>
                        <div class='user-block'>
                            <img class='img-circle' src='~/Areas/AdminCMS/dist/img/user1-128x128.jpg' alt='user image'>
                            <span class='username'><a href="#">@Model.Filename</a></span>
                            <span class='description'> @Model.CrtdDT</span>
                        </div><!-- /.user-block -->
                    </div><!-- /.box-header -->
                    <div class='box-body'>

                        <video controls alt="slidebg1" width="100%" height="100%"
                               data-bgfit="cover" data-bgposition="center center" data-bgrepeat="no-repeat">
                            <source src="~/@Model.LinkHref" type="video/mp4">
                            Trình duyệt của bạn không hỗ trợ HTML5.
                        </video>


                    
                        @Html.Raw(Model.MediaDesc)

                        <span class='pull-right text-muted'> 200 Lượt xem</span>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->

            </div><!-- /.user-block -->


        </div>
        <div class="col-md-4">
            <div class="box box-widget">
                <div class="box-header with-border">
                    <h3 class="box-title">Video khác</h3>
                </div><!-- /.box-header -->
                @foreach (MiniMediaViewModel _item in Model.lstSameVideo)
                {
                    <div class='box-header with-border'>
                        <div class='user-block'>
                            <img class='img-circle' src='~/@_item.ThumbURL' alt='user image'>
                            <span class='username'><a href="#">@_item.Filename</a></span>
                            <span class='description'> @_item.CrtdDT</span>
                            @if (_item.tmp > 0)
                            {
                                <span class='badge bg-green'> Đã xem</span>
                            }
                        </div><!-- /.user-block -->
                    </div><!-- /.box-header -->

                }

            </div><!-- /.box -->
        </div>




    </div><!-- /.tab-content -->

</section><!-- /.content -->
