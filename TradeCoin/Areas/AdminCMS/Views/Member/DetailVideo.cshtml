        </div>
        <div class="col-md-4">
            <div class="box box-widget">
                <div class="box-header with-border">
                    <h3 class="box-title">Video khác</h3>
                </div><!-- /.box-header -->
                @foreach (MiniMediaViewModel _item in Model.lstSameVideo)
                {
                    <div class='box-header with-border'>
                        <div class='user-block'>
                            <img class='img-circle' src='~/@_item.ThumbURL' alt='user image'>
                            <span class='username'><a href="@Url.Action("DetailVideo", "Member",new { id =_item.MediaContentId })">@_item.Filename</a></span>
                            <span class='description'> Được gửi bởi Admin</span>
                            @if (_item.tmp > 0)
                            {
                                <span class='badge bg-green'> Đã xem</span>
                            }
