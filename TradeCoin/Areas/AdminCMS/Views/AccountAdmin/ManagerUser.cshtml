@using Microsoft.AspNet.Identity
@using DataModel.DataEntity;
@using DataModel.DataViewModel;
@model UserAndRoles
@{

    Layout = "~/Areas/AdminCMS/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Trạng thái</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <h2 class="page-header">Thông tin tài khoản : @Model.ObjUser.FullName</h2>
                    <p>
                        Trạng thái :

                        @if (@Model.ObjUser.LockoutEnabled == true)
                        {<strong> Đang tạm khoá</strong>
                            <a href="@Url.Action("ChangeState", "AccountAdmin", new { id = Model.ObjUser.Id, state = false })" class="btn bg-olive btn-flat margin">Kích hoat</a>
                        }
                        else
                        {
                            <strong> Đang hoạt động</strong>
                            <a href="@Url.Action("ChangeState", "AccountAdmin", new { id = Model.ObjUser.Id, state = true })" class="btn bg-olive btn-flat margin">Tạm Khoá</a>
                        }

                    </p>
                    <p>
                        Xác nhận Email :
                        @if (@Model.ObjUser.EmailConfirmed == false)
                        {<strong> Chưa xác nhận</strong>
                            <a href="#" class="btn bg-olive btn-flat margin">Yêu cầu xác nhận</a>
                        }
                        else
                        {
                            <strong> Đã xác nhận</strong>

                        }

                    </p>

                </div><!-- /.box-body -->
                <!-- form start -->
            </div><!-- /.box box-primary -->


            <div class="box box-primary">
                <div class="box-body">
                    <div class="box-header with-border">
                        <h3>Quyền hiện tại</h3>
                    </div><!-- /.box-header -->
                    <table class="table table-hover col-md-6">
                        <tbody>
                            <tr>
                                <th>Tên quyền</th>
                                <th>Xoá</th>
                            </tr>

                            @foreach (string _val in Model.LstCurRole)
                            {
                                <tr>
                                    <td> <span class="label label-success">@_val</span></td>
                                    <td><a href="@Url.Action("RemoveUserRole", "AccountAdmin", new { Id = Model.ObjUser.Id, RoleName = _val })" class="btn btn-block btn-danger btn-xs">Xoá</a></td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <h2 class="page-header">Thêm quyền</h2>
                    <table class="table table-hover col-md-6">
                        <tbody>
                            <tr>
                                <th>Tên quyền</th>
                                <th>Thêm quyền</th>
                            </tr>
                            @foreach (SelectListItem _val in Model.LstAllRole)
                            {
                                <tr>
                                    <td> <span class="label label-success">@_val.Text</span></td>
                                    <td><a href="@Url.Action("AddUserRole", "AccountAdmin", new { Id = Model.ObjUser.Id, RoleName = _val.Text  })" class="btn btn-block btn-danger btn-xs">Thêm</a></td>
                                </tr>
                            }





                        </tbody>
                    </table>
                </div>
            </div><!-- /.box -->
         

        </div><!--/.col (left) -->

        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Nâng cấp gói cước</h3>
                </div><!-- /.box-header -->
                <!-- form start -->

                <div class="box-body">
                    <h2 class="page-header">Gói cước hiện tại <span class="label label-success">Free</span></h2>
                    <table class="table table-hover col-md-6">
                        <tbody>
                            <tr>
                                <th>Tên gói cước</th>
                                <th>Xoá</th>
                            </tr>



                            <tr>
                                <td> <span class="label label-success">Đêm</span></td>
                                <td><a href="#" class="btn btn-block btn-danger btn-xs">Nâng cấp</a></td>
                            </tr>
                            <tr>
                                <td> <span class="label label-success">Đồng</span></td>
                                <td><a href="#" class="btn btn-block btn-danger btn-xs">Nâng cấp</a></td>
                            </tr>
                            <tr>
                                <td> <span class="label label-success">Vàng</span></td>
                                <td><a href="#" class="btn btn-block btn-danger btn-xs">Nâng cấp</a></td>
                            </tr>
                            <tr>
                                <td> <span class="label label-success">Kim cương</span></td>
                                <td><a href="#" class="btn btn-block btn-danger btn-xs">Nâng cấp</a></td>
                            </tr>

                        </tbody>
                    </table>

                </div><!-- /.box-body -->


            </div><!-- /.box -->


        </div><!--/.col (left) -->
        <!-- right column -->

    </div>   <!-- /.row -->
</section>


