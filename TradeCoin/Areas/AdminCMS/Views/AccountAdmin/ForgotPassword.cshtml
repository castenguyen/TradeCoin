@model DataModel.DataViewModel.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = "~/Areas/AdminCMS/Views/Shared/_MainLayout.cshtml";
}
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#">@ViewBag.SiteName</a>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Enter your email.</p>
            @using (Html.BeginForm("ForgotPassword", "AccountAdmin",FormMethod.Post, new { @class = "" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                    <span class="glyphicon glyphicon-envelope form-control-feedback">@Html.ValidationMessageFor(m => m.Email, "")</span>
                </div>
                <div class="row">
                    <div class="col-xs-4">
                        <input type="submit" value="Send" class="btn btn-primary btn-block btn-flat" />
                    </div><!-- /.col -->
                </div>
            }     
            <a href="@Url.Action("Register", "AccountAdmin")" class="text-center">Đăng ký tài khoản mới</a>
        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
    <!-- jQuery 2.1.4 -->
    <script src="~/Areas/AdminCMS/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="~/Areas/AdminCMS/bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Areas/AdminCMS/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
