@using DataModel.DataEntity;
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<ExceptionLog>
@{
    ViewBag.Title = "Lịch sử lỗi";
}

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Quản Lý lịch sử lỗi của ứng dụng</h3>
                    <!-- form start -->
                    <div class="box-body">
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <th>Controller</th>
                                    <th>Action</th>
                                    <th>Ngày tạo</th>
                                    <th>Lỗi</th>
                                    <th>Action</th>
                                </tr>
                                @{
                                    foreach (var _val in Model)
                                    {
                                        <tr>
                                            <td>@_val.Id</td>
                                            <td>@_val.Controller</td>
                                            <td>@_val.Action</td>
                                            <td>@_val.CrtdDT</td>
                                            <td>@_val.ErrorMessage</td>
                                            <td>
                                                <a href="@Url.Action("Delete", "HistoryManager", new { area = "AdminCMS", id = _val.Id })" onclick="return confirm('Bạn có muốn xóa lịch sử lỗi này');" class="btn btn-danger">Xóa</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div><!-- /.box-body -->

                    <div class="box-footer clearfix">
                        @if (Model.PageCount > 1)
                        {
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                        }
                    </div>

                </div><!-- /.box -->
                <!-- Form Element sizes -->
            </div><!--/.col (left) -->
        </div>   <!-- /.row -->
</section>